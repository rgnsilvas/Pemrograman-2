<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="400.0" prefWidth="800.0" 
	xmlns:fx="http://javafx.com/fxml/1" 
	xmlns="http://javafx.com/javafx/23.0.1" 
	fx:controller="controller.pelangganCon">
    <HBox spacing="10">
        <Button fx:id="toBukuButton" text="Data Buku" />
        <Button fx:id="toPenjualanButton" text="Data Penjualan" />
      <VBox.margin>
         <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
      </VBox.margin>
    </HBox>
    <HBox alignment="CENTER_LEFT" spacing="10">
        <TextField fx:id="namaField" promptText="Nama" />
        <TextField fx:id="emailField" promptText="Email" />
        <TextField fx:id="teleponField" promptText="Telepon" />
        <Button fx:id="addButton" text="Add" />
        <Button fx:id="editButton" text="Edit" />
        <Button fx:id="deleteButton" text="Delete" />
      <VBox.margin>
         <Insets left="10.0" right="10.0" />
      </VBox.margin>
    </HBox>
    <TableView fx:id="pelangganTable">
        <columns>
            <TableColumn fx:id="namaColumn" prefWidth="300.0" text="Nama" />
            <TableColumn fx:id="emailColumn" prefWidth="250.0" resizable="false" text="Email" />
            <TableColumn fx:id="teleponColumn" prefWidth="250.0" resizable="false" text="Telepon" />
        </columns>
      <VBox.margin>
         <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
      </VBox.margin>
    </TableView>
</VBox>
