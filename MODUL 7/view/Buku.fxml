<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="450.0" prefWidth="900.0" 
	xmlns="http://javafx.com/javafx/23.0.1" 
	xmlns:fx="http://javafx.com/fxml/1" 
	fx:controller="controller.bukuCon">
    <HBox spacing="10">
        <Button fx:id="toPelangganButton" text="Data Pelanggan" />
        <Button fx:id="toPenjualanButton" text="Data Buku" />
        <Button fx:id="toPelangganButton" text="Data Penjualan" />
      <VBox.margin>
         <Insets bottom="10.0" left="10.0" top="10.0" />
      </VBox.margin>
    </HBox>
    <HBox alignment="CENTER_LEFT" spacing="10">
        <TextField fx:id="judulField" promptText="Judul">
         <HBox.margin>
            <Insets left="10.0" right="10.0" />
         </HBox.margin></TextField>
        <TextField fx:id="penulisField" promptText="Penulis" />
        <TextField fx:id="hargaField" promptText="Harga" />
        <TextField fx:id="stokField" promptText="Stok" />
        <Button fx:id="addButton" text="Add" />
        <Button fx:id="editButton" text="Edit" />
        <Button fx:id="deleteButton" text="Delete" />
    </HBox>
    <TableView fx:id="bukuTable">
        <columns>
            <TableColumn fx:id="judulColumn" prefWidth="250.0" text="Judul" />
            <TableColumn fx:id="penulisColumn" prefWidth="230.0" text="Penulis" />
            <TableColumn fx:id="hargaColumn" prefWidth="200.0" resizable="false" text="Harga" />
            <TableColumn fx:id="stokColumn" prefWidth="200.0" resizable="false" text="Stok" />
        </columns>
      <VBox.margin>
         <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
      </VBox.margin>
    </TableView>
</VBox>
