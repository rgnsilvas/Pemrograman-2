<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="450.0" prefWidth="900.0" 
	xmlns:fx="http://javafx.com/fxml/1" 
	xmlns="http://javafx.com/javafx/23.0.1" 
	fx:controller="controller.penjualanCon">
    <HBox spacing="10">
        <Button fx:id="toPelangganButton" text="Data Pelanggan" />
        <Button fx:id="toBukuButton" text="Data Buku" />
      <VBox.margin>
         <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
      </VBox.margin>
    </HBox>
    <HBox alignment="CENTER_LEFT" spacing="10">
        <TextField fx:id="jumlahField" promptText="Jumlah" />
        <TextField fx:id="totalHargaField" promptText="Total Harga" />
        <TextField fx:id="tanggalField" promptText="Tanggal (YYYY-MM-DD)" />
        <TextField fx:id="pelangganIdField" prefHeight="25.0" prefWidth="107.0" promptText="Pelanggan ID" />
        <TextField fx:id="bukuIdField" prefHeight="25.0" prefWidth="104.0" promptText="Buku ID" />
        <Button fx:id="addButton" text="Add" />
        <Button fx:id="editButton" text="Edit" />
        <Button fx:id="deleteButton" text="Delete" />
      <VBox.margin>
         <Insets left="10.0" right="10.0" />
      </VBox.margin>
    </HBox>
    <TableView fx:id="penjualanTable">
        <columns>
            <TableColumn fx:id="jumlahColumn" prefWidth="176.0" resizable="false" text="Jumlah" />
            <TableColumn fx:id="totalHargaColumn" prefWidth="176.0" resizable="false" text="Total Harga" />
            <TableColumn fx:id="tanggalColumn" prefWidth="176.0" resizable="false" text="Tanggal" />
            <TableColumn fx:id="pelangganIdColumn" prefWidth="176.0" resizable="false" text="Pelanggan ID" />
            <TableColumn fx:id="bukuIdColumn" prefWidth="176.0" resizable="false" text="Buku ID" />
        </columns>
      <VBox.margin>
         <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
      </VBox.margin>
    </TableView>
</VBox>
